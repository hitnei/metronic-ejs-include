<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
  <div class="alert alert-light alert-elevate" role="alert">
    <div class="alert-icon"><i class="flaticon-warning kt-font-brand"></i></div>
    <div class="alert-text">
      The draggable portlets powered with jQueryUI Sortable Plugin. You can use the jQueryUI Sortable API to store the
      portlet positions in your backend.
      <br>For more info please check out <a class="kt-link kt-link--brand kt-font-bold"
        href="http://jqueryui.com/sortable/#portlets" target="_blank">the official documentation.</a>
    </div>
  </div>
  <div class="row" id="kt_sortable_portlets">
    <div class="col-lg-6">

      <!--begin::Portlet-->
      <% for (var i = 0; i < 4; i++ ) { %>
      <% include portlet/col %>
      <% } %>

      <!--end::Portlet-->

      <!-- begin:Empty Portlet: sortable porlet required for each columns! -->
      <div class="kt-portlet kt-portlet--sortable-empty">
      </div>

      <!--end::Empty Portlet-->
    </div>
    <div class="col-lg-6">

      <!--begin::Portlet-->
      <% for (var i = 0; i < 4; i++ ) { %>
      <% include portlet/col %>
      <% } %>

      <!--end::Portlet-->

      <!-- begin:Empty Portlet: sortable porlet required for each columns! -->
      <div class="kt-portlet kt-portlet--sortable-empty">
      </div>

      <!--end::Empty Portlet-->
    </div>
  </div>
</div>
